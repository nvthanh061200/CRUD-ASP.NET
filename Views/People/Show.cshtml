@model IEnumerable<Lap2.Models.people>

@{
    ViewBag.Title = "Show";
}
<style>
    marquee {
        color: white;
        background-color: blue;
        height:100px;
        max-width: 100%;
        font-size:50px;
        font-weight:30px;
    }
</style>
<marquee>Thi Kết Thúc Học Phần Môn: ASP>NET - Nguyễn Văn Thành - KTPM-K17A</marquee>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID,HoTen=item.HoTen,NgaySinh=item.NgaySinh }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>

    }

</table>
